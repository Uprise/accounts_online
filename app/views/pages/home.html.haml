- if current_user
  %p
    = "Hello #{current_user.first_name}"
  %p
    - if current_user.application_form
      = link_to "Continue application", edit_application_form_path(:id => current_user.application_form)
    - else
      = link_to "Begin a new application", new_application_form_path
- else
  %h2 Sign up
  = link_to 'Sign up', new_user_registration_path

  %h2 Sign in
  = form_tag new_user_session_path do
    .field
      = label_tag 'user[email]', 'Email'
      = text_field_tag 'user[email]', '', :class => 'small_input'
    .field
      = label_tag 'user[password]', 'Password'
      = password_field_tag 'user[password]', '', :class => 'small_input'
    .field  
      = check_box_tag 'user[remember_me]'
      = label_tag 'user[remember_me]', 'Remember me'
    .action
      %button Login
    .action
      = link_to "Forgot your password?", new_password_path('user')